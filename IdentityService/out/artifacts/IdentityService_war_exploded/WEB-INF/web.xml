<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
    <filter>
        <filter-name>CORSFilter</filter-name>
        <filter-class>cors.CORSFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>CORSFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <servlet>
        <servlet-name>loginHandler</servlet-name>
        <servlet-class>response.loginHandler</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>validateHandler</servlet-name>
        <servlet-class>response.validateHandler</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>loginHandler</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>validateHandler</servlet-name>
        <url-pattern>/validate</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>logoutHandler</servlet-name>
        <servlet-class>response.logoutHandler</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>logoutHandler</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>RegisterHandler</servlet-name>
        <servlet-class>response.registerHandler</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RegisterHandler</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>
</web-app>